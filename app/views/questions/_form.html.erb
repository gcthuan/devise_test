<% if @question.errors.any? %>
  <ul>
    <%= @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @question do |f| %>
  <div>
    <%= f.label :name %>
  </div>
  <div>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :body %>
  </div>
  <div>
    <%= f.cktext_area :body, rows: 10 %>
  </div>
</br>
  <div>
    <%= f.submit "Submit", class: "btn btn-medium btn-primary" %>
  </div>
<% end %>