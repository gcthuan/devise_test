
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to image_tag("logo-trans.png", size: "50x50"), root_path %>
      <nav>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.email %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", '#' %></li>
                <% if current_page?('/users/edit') %>
                <li><%= link_to "Settings", '#' %></li>
                <% else %>
                <li><%= link_to "Settings", 'users/edit' %></li>
                <% end %>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", "users/sign_out" %>
                </li>
              </ul>
            </li>
          <% else %>
            <% if current_page?('/users/sign_in') %>
              <li><%= link_to "Sign in", '#' %></li>
            <% else %>
              <li><%= link_to "Sign in", "users/sign_in" %></li>
            <% end %>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>